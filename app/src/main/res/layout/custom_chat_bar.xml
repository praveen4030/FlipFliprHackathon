<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:id="@+id/customChatRl">

    <LinearLayout
        android:id="@+id/backLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:background="@drawable/curve"
        android:backgroundTint="@color/colorPrimary"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_navigation_arrow_back_inverted"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/custom_profile_IMAGE"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/user_profile_image"
            android:cropToPadding="true"
            android:layout_marginEnd="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/backLl"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:maxLines="1"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/onlineStatus"
        android:layout_below="@id/custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/backLl"
        android:layout_marginStart="10dp"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/typing"
        android:layout_below="@id/custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/backLl"
        android:layout_marginStart="10dp"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>